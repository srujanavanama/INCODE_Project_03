<%- include('../includes/header.ejs') %>
<h2 class="heading two">List of Schedules</h2>
<h2 class="heading two">User - Day Start_time - End_time</h2>
<% for (i=0; i<schedules.length; i++) { %>
  <% let dayText = "" %>
    <% switch (schedules[i].day) { 
      case 1: %>
     <% dayText = "Monday" %>
     <% break;
      case 2: %>
     <% dayText = "Tuesday" %>
     <% break; 
     case 3: %>
     <% dayText = "Wednesday" %>
     <% break; 
      case 4: %>
     <% dayText = "Thursday" %>
     <% break;
      case 5: %>
     <% dayText = "Friday" %>
     <% break;
      case 6: %>
     <% dayText = "Saturday" %>
     <% break;
      case 7: %>
     <% dayText = "Sunday" %>
     <% break; } %>
  <div><%= schedules[i].firstname %> <%= schedules[i].lastname %> - <%= dayText %> <%= schedules[i].start_at %> - <%= schedules[i].end_at %> </div>
  <br />
  <% } %> 
